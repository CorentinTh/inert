    link(rel='stylesheet', href='styles/styles.less')
    link(href='https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap', rel='stylesheet')
  body
    #inert
      canvas#canvas
      .controls
        h1 Inert
        .subtitle Minimalistic Tower Defense
        hr
        .info
          table.table5050
            tbody
              tr
                td Wave:
                td
                  span#wave.accent 1
                  |
                  |
                  span#delay
              tr
                td Cash:
                td.accent
                  span#cash 12
                  |  ¢
        hr
        .towers
          #towers-wrapper
          #towers-stats
        hr
        table.table5050
          tbody
            tr
              td Spawners:
              td
               a#spawner1.spawner(href="?spawners=1") 1
               a#spawner2.spawner(href="?spawners=2") 2
               a#spawner3.spawner(href="?spawners=3") 3
               a#spawner4.spawner(href="?spawners=4") 4
        hr
        div.switch-box
          label.switch
            input(type='checkbox')#demolish-toggle
            span.slider
          label#switch-text(for="demolish-toggle") Demolish-Mode: Off
        footer
          div
            | Inert
            |
            span#version.accent v0.1.1
          .code
            span Source code:
            a(href='//github.com/CorentinTh/inert', target='_blank', aria-label='Github repository', rel='noopener')
